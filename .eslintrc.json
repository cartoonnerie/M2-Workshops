{
  "parserOptions": {
    "emcmaVersion": 6,
    "sourceType": "module"
  },
  "parser": "esprima",

  "rules": {
    "eslint semi": ["error", "always"],
    "no-duplicate-case": "warn",
    "camelcase": "error",
    "no-var": "error",
    "brace-style": ["warn", "1tbs", { "allowSingleLine": true }],
    "comma-spacing": ["warn", { "before": false, "after": true }],
    "eqeqeq": ["error", "always"],
    "arrow-spacing": "warn",
    "indent": ["warn", 2]
  }
}
